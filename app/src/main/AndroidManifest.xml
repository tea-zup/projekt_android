<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="si.uni_lj.fe.seminar.prevozi">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Prevozi"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Main_page"
            android:exported="false"
            android:parentActivityName=".ui.login.LoginActivity"
            android:label="Moje rezervacije"/>
        <activity
            android:name=".Moje_ponudbe"
            android:exported="true"
            android:parentActivityName=".Main_page"
            android:label="Moje ponudbe"/>
        <activity
            android:name=".ui.login.LoginActivity"
            android:clickable="true"
            android:exported="true"
            android:focusableInTouchMode="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>